<script>

$("#analyze").click(function(){

$("#progressbar").show();

$.ajax({
  url: "analyze",
  type: "POST",
  data: { member : $("#member").val(),csrfmiddlewaretoken: $("input[type=hidden]").val() },
  dataType: "html"
  
}).done(function( data ) {
    $("#script").remove();
    $("#progressbar").hide();
    $("body").append(data);
  });

});

</script>

